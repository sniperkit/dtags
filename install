#!/bin/sh

# dtags install script
######################################

echo '==> starting installation'

if [ -f ~/.dtags/dtags ]; then
  echo '==> github install detected!'
  ln -fs ~/.dtags/dtags /usr/local/bin
elif [ -f "$PWD/dtags" ]; then
  echo '==> manual install detected!'
  ln -fs "$PWD/dtags" /usr/local/bin
else
  echo '!!> error during installation, please check documentation'
  exit 1
fi

echo "==> setting correct permissions for dtags executable"
chmod 755 /usr/local/bin/dtags

echo "==> initializing"
dtags init

echo "==> installation complete!"
